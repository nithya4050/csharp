    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="https://static.vecteezy.com/system/resources/previews/008/969/361/non_2x/multi-layers-gray-blue-dark-texture-3d-papercut-layers-in-gradient-banner-abstract-paper-cut-art-background-design-for-website-template-topography-map-concept-or-smooth-origami-paper-cut-vector.jpg"></ImageBrush>
        </StackPanel.Background>


